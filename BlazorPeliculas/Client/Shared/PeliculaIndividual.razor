

<div style="margin-right: 2%; margin-bottom: 10px; text-align: center;">
    <a>
        <img src="@Pelicula.Poster" alt="Poster" style="width: 225px; height:300px;"/>
    </a>
    <p style="maxwidth: 225px; height: 44px; font-size: 15px; font-weight:bold">@Pelicula.TituloCorto</p>

    <p>Premier: <b>@Pelicula.Lanzamiento.ToString("dd MMM yyyy")</b></p>
    <div>
        <a class="btn btn-info">Edit</a>
        <button type="button" class="btn btn-danger"
            @onclick="@(() => EliminarPelicula.InvokeAsync(Pelicula))">
            Delete
        </button>
    </div>
 </div>


@code {
    [Parameter] public Pelicula Pelicula { get; set; }
    [Parameter] public bool MostrarBotones { get; set; } = false;
    [Parameter] public EventCallback<Pelicula> EliminarPelicula { get; set; }
}